<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal">
	<ImageButton android:src="@drawable/mainicon"
		android:paddingRight="10dp" android:paddingTop="10dp"
		android:id="@+id/imageViewBibliaCabecalhoHome" android:clickable="true"
		android:layout_gravity="right" android:layout_width="45dp"
		android:layout_height="45dp" />
	<TextView android:id="@+id/cabecalho_biblia_livros"
		android:text="@string/nomeLivro" android:layout_width="fill_parent"
		android:layout_weight="1" android:paddingLeft="10dp"
		android:clickable="true" android:textSize="18dp"
		android:cursorVisible="true" android:textColor="@color/selector_home_text"
		android:background="@color/selector_home_background"
		android:layout_height="fill_parent" android:gravity="center_vertical"></TextView>
	<TextView android:textSize="16dp" android:id="@+id/cabecalho_biblia_traducao"
		android:text="@string/traducao" android:paddingRight="10dp"
		android:clickable="true" android:textColor="@color/selector_home_text"
		android:background="@color/selector_home_background"
		android:layout_height="fill_parent" android:layout_width="wrap_content"
		android:gravity="center_vertical"></TextView>

</LinearLayout>
