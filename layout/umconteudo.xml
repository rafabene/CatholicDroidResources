<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="@drawable/sfondo">

	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:background="#000000">
		<ImageButton android:id="@+id/btnHome" android:src="@drawable/homeicon"
			android:layout_width="25dp" android:layout_height="28dp"></ImageButton>
	</LinearLayout>

	<ScrollView android:layout_height="wrap_content" android:id="@+id/scrollView1"
		android:layout_width="match_parent">
		<TextView android:id="@+id/conteudo" android:layout_width="wrap_content"
			android:layout_height="wrap_content" style="@style/mainStyle" />
	</ScrollView>


</LinearLayout>
