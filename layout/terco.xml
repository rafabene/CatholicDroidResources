<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        layout="@layout/actionbar" >
    </include>

    <LinearLayout
        android:id="@+id/backgroundTerco"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/tercoContasScroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false" >

                    <ToggleButton
                        android:id="@+id/tercoCruxifixoToggleButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="top"
                        android:background="@drawable/selector_cruxifixo"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        style="@style/terco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/terco.sinalCruzeCreio" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ToggleButton
                        android:id="@+id/tercoPaiNosso1ToggleButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/selector_bolona"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        style="@style/terco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/oracao.painosso.name" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ToggleButton
                        android:id="@+id/tercoAveMaria1ToggleButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/selector_bolinha"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        style="@style/terco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/terco.aveMaria1" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ToggleButton
                        android:id="@+id/tercoAveMaria2ToggleButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/selector_bolinha"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        style="@style/terco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/terco.aveMaria2" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ToggleButton
                        android:id="@+id/tercoAveMaria3ToggleButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/selector_bolinha"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        style="@style/terco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/terco.aveMaria3" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ToggleButton
                        android:id="@+id/tercoPaiNosso2ToggleButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/selector_bolona"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        style="@style/terco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/terco.GloriaPainosso" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5" >

                    <kankan.wheel.widget.WheelView
                        android:id="@+id/tercoContasAveMarias"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/contaRezada"
                        style="@style/terco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutMedalha"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ToggleButton
                        android:id="@+id/tercoMedalhaToggleButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/selector_medalha"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        style="@style/terco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/terco.agradecimento.title" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5" >

            <TextView
                android:id="@+id/tercoConteudoOracao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/fontColor"
                android:textSize="17dp" >
            </TextView>
        </ScrollView>
    </LinearLayout>

</LinearLayout>